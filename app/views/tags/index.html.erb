<h2>タグ一覧</h2>

<div class="tag-index-link">
  <%= link_to "+タグを追加する", tags_new_path %>
</div>

<div class="tag-container">
  <% @tags.each do |t| %>
    <div class="tag">
      #<%= link_to t.tag, tags_search_path(t.id) %>
      <% if user_signed_in? && current_user.id == t.user_id %>
        <%= link_to "削除", "/tags/#{t.id}", method: :delete, data: { confirm: '削除しますか？' } %>
      <% end %>
    </div>
  <% end %>
</div>