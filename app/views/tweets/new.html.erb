<%= stylesheet_link_tag 'new', :media => "all" %>

<h2>新規投稿ページ</h2>


<%= form_for @tweet do |f| %>
  <div class="field">
    <%= f.label :title, '曲名' %>
    <%= f.text_field :title, :size => 140 %><br>
    <%= f.label :artist, 'アーティスト' %>
    <%= f.text_field :artist, :size => 140 %><br>
    <%= f.label :writer, '作詞者' %>
    <%= f.text_field :writer, :size => 140 %><br>
    <%= f.label :composer, '作曲者' %>
    <%= f.text_field :composer, :size => 140 %><br>
    <%= f.label :published, '配信先' %>
    <%= f.text_field :published, :size => 140 %><br>
    <%= f.label :record, '収録' %>
    <%= f.text_field :record, :size => 140 %><br>
    <%= f.label :used, 'タイアップ' %>
    <%= f.text_field :used, :size => 140 %><br>
  </div>

  <div class="field">
    <%= f.label :image, 'ジャケット写真 ※許可がある場合のみ' %><br>
    <%= f.file_field :image %>
  </div>

  <%= f.submit "タグ付けへ" %><br>
<% end %>



<%= link_to "楽曲一覧に戻る", tweets_path %>