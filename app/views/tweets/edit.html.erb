
<h2>楽曲情報編集ページだよ</h2>

<%= form_for @tweet do |f| %>
  <div class="field">
    <%= f.label :title, '曲名' %>
    <%= f.text_field :title %><br><br>
    <%= f.label :artist, 'アーティスト' %>
    <%= f.text_field :artist %><br><br>
    <%= f.label :writer, '作詞者' %>
    <%= f.text_field :writer %><br><br>
    <%= f.label :composer, '作曲者' %>
    <%= f.text_field :composer %><br><br>
    <%= f.label :year, 'リリース年' %>
    <%= f.text_field :year %><br><br>
  </div>
  <div class="areafield">    
    <%= f.label :published, '配信先' %><br>
    <%= f.text_area :published %><br><br>
    <%= f.label :record, '収録' %><br>
    <%= f.text_area :record %><br><br>
    <%= f.label :used, 'タイアップ' %><br>
    <%= f.text_area :used %><br><br>
  </div>

  <div class='form-group'>
    <h3>特徴タグ</h3>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag) do |tag| %>
        <div class='form-check'>
            <%= tag.label class: 'form-check-label' do %>
                <%= tag.check_box class: 'form-check-input' %>
                　 <%= tag.text %>
            <% end %>
        </div>
    <% end %>
  </div>
  
  <div class="fieldphoto">
    <%= f.label :image, 'ジャケット写真 ※許可がある場合のみ' %><br>
    <%= f.file_field :image %>
  </div>

  <%= f.submit "編集する" %>
<% end %>