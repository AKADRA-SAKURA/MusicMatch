<% if user_signed_in? && current_user.id == @tweet.user_id %>
  <%= link_to '編集する', "/tweets/#{@tweet.id}/edit" %>
  <%= link_to '削除する', "/tweets/#{@tweet.id}",method: :delete, data: { confirm: '削除しますか？' } %>
<% end %>

<div class="tweet">
  <%= image_tag @tweet.image_url, :size =>'240x240' %><br>
  <div class="detail">
    タイトル　<%= @tweet.title %><br>
    アーティスト　<%= link_to @tweet.artist, tweets_artist_path(@tweet.id) %><br>
    <% if user_signed_in? %> <!--いいねボタン開始-->
      <% if current_user.already_liked?(@tweet) %>
        <%= link_to tweet_like_path(@tweet.id, @tweet.id), method: :delete do %>
          <i class="far fa-heart unlike-btn" ></i>
        <% end %><%= @tweet.liked_users.count %>
      <% else %>
        <%= button_to tweet_likes_path(@tweet.id, @tweet.id) do %>
          <i class="far fa-heart like-btn" ></i>
        <% end %><%= @tweet.liked_users.count %>
      <% end %><br>
    <% else %>
      (♡<%= @tweet.liked_users.count %>)
    <% end %> <!--いいねボタン終わり-->       
    作詞者　<%= @tweet.writer %><br>
    作曲者　<%= @tweet.composer %><br>
    配信先　<%= @tweet.published %><br>
    CD収録　<%= @tweet.record %><br>
    タイアップ　<%= @tweet.used %><br>
    作成者  <%= @tweet.user.user_name %><br>
    記事作成日時　<%= @tweet.created_at %><br>
    </div>
  <div class="Tag">
    <h4>タグ</h4>
    <% @tweet.tags.each do |tag| %>
      #<span class= 'badge badge-primary'><%= link_to tag.tag, tags_search_path(tag.id) %></span>
    <% end %>
  </div>

</div>

<div class="liked-user">
  <h4>いいねしたユーザー</h4>
  <% @tweet.liked_users.each do |user| %>
    <li><%= user.user_name %></li>
  <% end %>
</div>

<div class="comment-wrapper">
  <h4>コメント一覧</h4>
  <% @comments.each do |c| %>
    <div>
      (投稿者)　<%= c.user.user_name unless c.user.blank? %>
      <br>
      (コメント)　<%= c.comment %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@tweet, @comment], local: true) do |f| %>
      <%= f.text_area :comment%>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to "Tweet一覧に戻る", tweets_path %>